<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_search_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcb3b3"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Logo"
        tools:src="@tools:sample/avatars" /> <EditText
    android:id="@+id/searchBox"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:background="@drawable/search_box_background"
    android:hint="Bạn đang tìm gì..."
    android:inputType="text"
    android:paddingHorizontal="16dp"
    android:textSize="14sp" />

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:contentDescription="Người dùng"
        tools:src="@tools:sample/avatars" /> </LinearLayout>