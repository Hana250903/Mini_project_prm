<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="12sp"
            android:textColor="#666"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPriceSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,550,000đ"
                android:textColor="#FF0000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvPriceOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="1,700,000đ"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <Button android:id="@+id/btnDecrease" android:text="−"
                android:layout_width="40dp" android:layout_height="40dp" />
            <TextView android:id="@+id/tvQuantity"
                android:text="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center" />
            <Button android:id="@+id/btnIncrease" android:text="+"
                android:layout_width="40dp" android:layout_height="40dp" />

            <TextView
                android:id="@+id/tvDelete"
                android:text="Xóa"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
